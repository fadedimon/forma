{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "useUnknownInCatchVariables": true,
    "jsx": "react",
    "target": "ES6",
    "lib": [
      "DOM",
      "ES2017"
    ],
    "paths": {
      "forma-core": [
        "./packages/forma-core/src"
      ],
      "forma-react": [
        "./packages/forma-react/src"
      ],
    }
  },
  "include": [
    "examples",
    "packages/forma-core",
    "packages/forma-react",
  ]
}